# Дефолтный бот (если не используете мультитенантность)
TELEGRAM_BOT_TOKEN=token_here

# Дополнительные боты для клиентов
# TELEGRAM_BOT_CLIENT1=token_here
# TELEGRAM_BOT_CLIENT2=token_here

# === API настройки ===
# Host для API сервера (0.0.0.0 для Docker, 127.0.0.1 для локального запуска)
API_HOST=0.0.0.0
API_PORT=8000

# Development mode - включает hot reload через проксирование на Vite dev server
# Установите true для разработки фронтенда с hot reload
# В production должно быть false
DEV_MODE=false

# Vite dev server URL (используется в DEV_MODE)
# Для Docker: host.docker.internal:5173
# Для локального запуска: localhost:5173
VITE_DEV_SERVER=http://host.docker.internal:5173

# Data directory
DATA_DIR=./data

# === JWT Авторизация ===
# SECRET_KEY - ключ для подписи JWT токенов
# Сгенерируйте криптографически стойкий ключ командой: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# ADMIN_PASSWORD - пароль для создания первого admin пользователя
# Используется скриптом scripts/create_admin.py
ADMIN_PASSWORD=your-secure-admin-password

# ACCESS_TOKEN_EXPIRE_MINUTES - время жизни JWT токена в минутах (по умолчанию 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === PostgreSQL Database ===
# Для Docker (используется в docker-compose.yml)
POSTGRES_DB=qapsula
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# DATABASE_URL формируется автоматически в docker-compose.yml
# Для локальной разработки без Docker используйте:
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/qapsula

# === Выбор LLM провайдера ===
# Варианты: openrouter, openai
LLM_TYPE=openrouter

# === OpenRouter (рекомендуется) ===
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_REFERER=https://your-site.com

# === OpenAI (альтернатива) ===
# OPENAI_API_KEY=your_openai_api_key_here

# === Настройки LLM ===
TEMPERATURE=0.7
MAX_TOKENS=1000

# === RAG Settings ===
RAG_TOP_K=3
USE_RAG_THRESHOLD=0.5

# === Пути к данным ===
VECTOR_STORE_PATH=./data/vectorstore
DOCUMENTS_PATH=./data/documents