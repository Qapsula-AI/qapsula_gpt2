# Telegram Bot Token (получите у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# === Выбор LLM (выберите один вариант) ===

# Вариант 1: OpenAI API (облачный)
# OPENAI_API_KEY=your_openai_api_key_here
# USE_LOCAL_MODEL=false

# Вариант 2: Локальная модель (рекомендуется для начала)
USE_LOCAL_MODEL=true
LOCAL_MODEL_PATH=./models/saiga_llama3_8b.Q4_K_M.gguf
MODEL_TYPE=saiga
# MODEL_TYPE варианты: saiga, mistral, llama

# Настройки для локальной модели
N_GPU_LAYERS=0
# N_GPU_LAYERS=32  # Раскомментируйте если есть NVIDIA GPU

# Пути к данным
VECTOR_STORE_PATH=./data/vectorstore
DOCUMENTS_PATH=./data/documents
